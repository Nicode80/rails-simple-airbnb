<h1>All our Flats</h1>

<p>All <%= @flats.count %> flats.</p>

<div class="container">
  <div class="row justify-content-around">

    <% @flats.each do |flat| %>


      <div class="card-trip col-3 m-3 p-0">
        <img src="https://source.unsplash.com/1600x900/?interior">
        <div class="card-trip-infos bg-light">
          <h2><%= flat.name %></h2>
          <p><%= flat.address %></p>
        </div>
        <ul class="list-inline p-3 m-0 bg-light">
          <li class="list-inline-item"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></li>
          <li class="list-inline-item"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></li>
        </ul>
        <div class="d-flex justify-content-between p-2">
          <%= link_to "More info", flat_path(flat), class: "text-primary"%>
          <%= link_to "Edit", flat_path(flat), class: "text-warning"%>
          <%= link_to "Remove", flat_path(flat), class: "text-danger"%>
        </div>
      </div>

    <% end %>

  </div>
</div>
